{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <article>
                <h3>{{ exercise.title }}</h3>

                <p>{{ exercise.description }}</p>

                <div class="bottom-article">
                    <ul class="meta-post">
                        <li><i class="fa fa-calendar"></i> {{ exercise.created|date('d-m-Y') }}</li>
                        <li><i class="fa fa-user"></i><a href="#"> {{ exercise.owner.username }}</a></li>
                        <li><i class="fa fa-comments"></i>TODO</li>
                        <li><i class="fa fa-tags"></i>{% for l in exercise.labels %} {{ l.name }}, {% endfor %}</li>

                        {% if exercise.owner.id == app.user.id  %}
                        <li>
                            <a href="{{ path('edit-exercise', { 'id': exercise.id }) }}">edit exercise</a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
            </article>
        </div>
    </div>
{% endblock %}
